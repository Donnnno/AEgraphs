<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ExtensionManifest
  Version="12.0"
  ExtensionBundleId="nl.onnno.aegraphs"
  ExtensionBundleVersion="0.5"
  ExtensionBundleName="AEGraphs">

  <ExtensionList>
    <Extension Id="nl.onnno.aegraphs" Version="0.5" />
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <Host Name="AEFT" Version="[12.0,99.9]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="12.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="nl.onnno.aegraphs">
      <DispatchInfo>
        <Resources>
          <MainPath>./index.html</MainPath>

          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
            <Parameter>--allow-file-access</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>AEGraphs</Menu>
          <Geometry>
            <Size>
              <Height>400</Height>
              <Width>300</Width>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>

  </DispatchInfoList>
</ExtensionManifest>